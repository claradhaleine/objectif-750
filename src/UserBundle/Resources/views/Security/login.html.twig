{% trans_default_domain 'FOSUserBundle' %}

{% extends "UserBundle::layout.html.twig" %}

{% block title_page %}Connexion{% endblock %}

{% block fos_user_content %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <p class="help">Vous pouvez aussi <a href="{{ path('fos_user_registration_register') }}">créer votre compte</a> ou <a href="{{ path('fos_user_resetting_request') }}">régénérer votre mot de passe</a>.</p>

  <form action="{{ path("fos_user_security_check") }}" method="post" class="fos_user_login form-horizontal col-md-12">
    {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
      <label for="username" class="col-sm-2 control-label required">{{ 'security.login.username'|trans }}</label>
      <div class="col-sm-3">
       <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
     </div>
    </div>

    <div class="form-group">
      <label for="password" class="col-sm-2 control-label required">{{ 'security.login.password'|trans }}</label>
      <div class="col-sm-3">
        <input type="password" id="password" class="form-control" name="_password" required="required" />
      </div>
    </div>

    <div class="form-group">
      <label for="remember_me" class="col-sm-2 control-label">{{ 'security.login.remember_me'|trans }}</label>
      <div class="col-sm-3">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      </div>
    </div>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
  </form>
{% endblock fos_user_content %}