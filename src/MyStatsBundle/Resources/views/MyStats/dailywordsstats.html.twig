{% extends "MyStatsBundle::layout.html.twig" %}

{% block fil_ariane %}
  {{ parent() }}
  <li>mots d'aujourd'hui</li>
  {# {{ render(controller('WordWarsBundle:WordWars:breadcrumb')) }} #}
{% endblock %}

{% block title_page %}Mon quota journalier{% endblock %}

{% block mystats_body %}
  <div id="mystats_wrapper" class="content_wrapper">
    <div id="daily_words_stats">
      <p>Aujourd'hui :
        {% if validay %}
          <span id="quota_validay">validé</span>
        {% else %}
          <span id="quota_pas_validay">pas encore validé</span>
        {% endif %}
        ({{ total_words_written }} mots sur {{ word_count_goal }})
      </p>

      <div id="word_count_progression">
        <div id="words_done">&nbsp;</div>
      </div>

      <div id="words_calendar_wrapper">
        <ul id="calendar_legend" class="inline_list">
          <li id="nowords" class="legend_item">
            <span class="legend_color nowords">&nbsp;</span>
            aucun mot écrit
          </li>
          <li id="somewords" class="legend_item">
            <span class="legend_color somewords">&nbsp;</span>
            quelques mots écrits
          </li>
          <li id="allwords" class="legend_item">
            <span class="legend_color allwords">&nbsp;</span>
            but atteint
          </li>
        </ul>

        <ul id="words_calendar" class="inline_list col-md-5">
          <li class="week_day">L</li>
          <li class="week_day">M</li>
          <li class="week_day">M</li>
          <li class="week_day">J</li>
          <li class="week_day">V</li>
          <li class="week_day">S</li>
          <li class="week_day">D</li>
          {% for data in calendar_data %}
            <li data-progression="{{ data.progression }}" class="{{ data.class }} calendar_item">
              <div class="day_number">{{ data.nb_day }}</div>
              <div class="progression_status">&nbsp;</div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endblock %}