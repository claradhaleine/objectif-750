{% extends "CoreBundle::core_layout.html.twig" %}

{% block title %}
  Mes Stats {{ parent() }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets filter='cssrewrite' 'bundles/mystats/css/mystats.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
  {% endstylesheets %}
{% endblock %}

{% block fil_ariane %}
  <li><a href="{{ path('my_stats_homepage') }}">mes stats</a></li>
  {# {{ render(controller('WordWarsBundle:WordWars:breadcrumb')) }} #}
{% endblock %}

{% block body %}
  {# On d√©finit un nouveau bloc, que les vues du bundle pourront remplir #}
  <div id="mystats_wrapper">
    <h2>{% block title_page %}{% endblock %}</h2>

    {% block mystats_body %}{% endblock %}
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% javascripts 'bundles/mystats/js/mystats.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}